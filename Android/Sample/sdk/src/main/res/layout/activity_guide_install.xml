<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mykey_page_top_bg">
    <!--背景色-->
    <TextView
        android:id="@+id/top_bg"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/mykey_page_top_bg"/>
    <!--返回按钮-->
    <ImageView
        android:id="@+id/back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="fitXY"
        android:padding="4dp"
        android:src="@drawable/icon_back" />

    <TextView
        android:id="@+id/sdk_guide_install_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:textColor="@color/mykey_title_black_light"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="MYKEY" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mykey_white"
        android:layout_below="@+id/sdk_guide_install_title">
        <ImageView
            android:id="@+id/sdk_guide_install_logo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@drawable/bg_logo"
            android:src="@drawable/icon_about_logo"
            android:layout_marginTop="80dp"
            android:scaleType="centerInside"
            android:layout_centerHorizontal="true"/>

        <!--提示-->
        <TextView
            android:id="@+id/sdk_guide_install_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/mykey_title_black_light"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:text="@string/sdk_download.txt.title"
            android:layout_below="@+id/sdk_guide_install_logo"
            tools:text="你还未安装MYKEY应用程序"/>

        <!--了解MYKEY-->
        <TextView
            android:id="@+id/sdk_guide_install_download"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="16sp"
            android:textColor="@color/mykey_theme_active"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/bg_button_white_fill_blue_rim_round8"
            android:text="@string/sdk_download.btn.download"
            android:layout_below="@+id/sdk_guide_install_tip"
            tools:text="了解MYKEY"/>
    </RelativeLayout>

</RelativeLayout>